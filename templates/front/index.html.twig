{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class"col">
				<h2>Livres</h2>
				{% if livres %}
					<ul>
						{% for livre in livres %}
							<li><a href="{{path('app_front_livre_show', {id: livre.id}) }}">{{ livre.titre }}</a></li>
						{% endfor %}
					</ul>
				{% endif %}
			</div>
		</div>

	</div>

{% endblock %}