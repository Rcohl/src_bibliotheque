<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Emprunteur
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{# chargement via un CDN #}
			{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> #}
		{{ encore_entry_link_tags('app') }}
		{% endblock %}

			{% block javascripts %}{{ encore_entry_script_tags('app') }}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer> </script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<div class="container">
				<div class="row">
					<div class="col">
						<nav class="navbar navbar-expand-lg bg-body-tertiary">
							<div class="container-fluid">
								<a class="navbar-brand" href="{{ path('app_home') }}">Bibliothèque</a>
								<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
									<span class="navbar-toggler-icon"></span>
								</button>
								<div class="collapse navbar-collapse" id="navbarSupportedContent">
									<ul class="navbar-nav me-auto mb-2 mb-lg-0">
										<li class="nav-item">
											<a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_livre_index') }}">Livres</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_auteur_index') }}">Auteurs</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_genre_index') }}">Genre</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_emprunt_index') }}">Emprunts</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="{{ path('app_admin_user_index') }}">Emprunteurs</a>
										</li>
									</ul>
									{% if app.user %}
										<div class="mb-3">
											Bonjour
											{{ app.user.userIdentifier }},
											<a href="{{ path('app_logout') }}">Déconnexion</a>
										</div>
									{% else %}
										<div>
											<a href="{{ path('app_login') }}">Connexion</a>
										</div>
									{% endif %}
								</div>
							</div>
						</nav>
					</div>
				</div>
			</div>
		{% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>
